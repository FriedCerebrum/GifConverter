<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="AdvancedSettingsController"
           style="-fx-background-color: rgba(59, 60, 71, 0.9); -fx-padding: 20; -fx-border-radius: 10px; -fx-background-radius: 10px;">
    <VBox spacing="15" alignment="CENTER">
        <!-- Заголовок -->
        <Label text="Choose an Option" style="-fx-font-size: 16; -fx-text-fill: #f4e8da; -fx-font-weight: bold;" />

        <!-- Radio-кнопки -->
        <RadioButton fx:id="option1" text="Option 1" style="-fx-text-fill: #8A8CA1;" />
        <RadioButton fx:id="option2" text="Option 2" style="-fx-text-fill: #8A8CA1;" />
        <RadioButton fx:id="option3" text="Option 3" style="-fx-text-fill: #8A8CA1;" />

        <!-- Кнопки -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Accept" onAction="#handleAccept"
                    style="-fx-background-color: #565872; -fx-text-fill: #f4e8da; -fx-padding: 5 15; -fx-background-radius: 5px;" />
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #565872; -fx-text-fill: #f4e8da; -fx-padding: 5 15; -fx-background-radius: 5px;" />
        </HBox>
    </VBox>
</StackPane>
